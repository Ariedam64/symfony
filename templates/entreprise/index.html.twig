{% extends 'base.html.twig' %}

{% block titreStage %}Entreprises{% endblock %}

{% block contenuSupp %}


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Activite</th>
                <th>Adresse</th>
                <th>SiteWeb</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entreprise in entreprises %}
            <tr>
                <td>{{ entreprise.id }}</td>
                <td>{{ entreprise.nom }}</td>
                <td>{{ entreprise.activite }}</td>
                <td>{{ entreprise.adresse }}</td>
                <td>{{ entreprise.siteWeb }}</td>
                <td>
                    <a class="nav-link" href="{{path('entreprise_show',{'id':entreprise.id}) }}"><button type="submit" class="btn btn-dark">Consulter</button></a>
                      {% if is_granted('ROLE_ADMIN') %}
                        <a class="nav-link" href="{{path('entreprise_edit',{'id':entreprise.id}) }}"><button type="submit" class="btn btn-dark">Modifier</button></a>
                        {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucune entreprise enregistré</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if is_granted('ROLE_ADMIN') %}
    <a class="nav-link" href="{{path('entreprise_new') }}"><button type="submit" class="btn btn-primary">Créer une nouvelle entreprise</button></a>
    {% endif %}
{% endblock %}
