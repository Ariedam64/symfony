{% extends 'base.html.twig' %}

{% block titre %}
<h3> ProStages | Trié par Entreprises</h3>
{% endblock %}

{% block titreStage %}
Entreprises proposant des stages
{% endblock %}

{% block contenuSupp %}

  {% set debutNouvelleLigne = true %}
  {% for entrepriseCourant in entreprises %}

  {% if debutNouvelleLigne == true %}
    <div class="card-group">
    {% set debutNouvelleLigne = false %}
  {% endif %}

  <div class="col-sm-2">
  <div class="card">

    <div class="card-body">
      <h5 class="card-title">      <div align="right"><a class="nav-link" href="{{path('ProStages_modifierEntreprise',{'id':entrepriseCourant.id})}}"><button type="submit" class="btn btn-dark">Modifier</button></a></div>{{entrepriseCourant.getNom}}</h5>
      <p class="card-text"></p>
      <p class="card-text">{{entrepriseCourant.getActivite}}</p>
      <p class="card-text">{{entrepriseCourant.getAdresse}}</p>
      <p class="card-text">Stages proposé : </p>
      <ul>
      {% if entrepriseCourant.stages|length > 0 %}
        {% for stage in entrepriseCourant.stages %}
          <li>
            <a href={{path('ProStages_stages',{id:stage.id})}}>{{stage.intitule}}</a>
          </li>
        {% endfor %}
      {% else %}
          <li>
              <b>Aucun</b>
          </li>
      {% endif %}

      </ul>
   </div>
  </div>
    </div>
    {% if loop.index % 6 == 0 %}
      </div>
      <br />
      {% set debutNouvelleLigne = true %}
    {% endif %}
  {% endfor %}

{% endblock %}
